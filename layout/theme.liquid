<!doctype html>
<html>

<head>
    <title>{{ page_title }}</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="{{ page_description | escape }}">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">

    <link rel="canonical" href="{{ canonical_url }}">

    {%- if settings.favicon != blank -%}
        <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
    {%- endif -%}
    {{ content_for_header }} <!-- Header hook for plugins -->
</head>

<body>

    {% include 'header' %}

    <main role="main">
        {{ content_for_layout }}
    </main>

    {% include 'footer' %}

    {{ 'fonts.css' | asset_url | stylesheet_tag }}
    
    {{ 'bootstrap-grid.min.css' | asset_url | stylesheet_tag }}
    {{ 'swiper-bundle.min.css' | asset_url | stylesheet_tag }}
    {{ 'reset.css' | asset_url | stylesheet_tag }}
    {{ 'application.css' | asset_url | stylesheet_tag }}
    {{ 'media.css' | asset_url | stylesheet_tag }}
    {{ 'menu.css' | asset_url | stylesheet_tag }}

    {{ 'jquery-3.7.1.min.js' | asset_url | script_tag }}
    {{ 'swiper-bundle.min.js' | asset_url | script_tag }}
    {{ 'application.js' | asset_url | script_tag }}
    {{ 'menu.js' | asset_url | script_tag }}
    
</body>
</html>
