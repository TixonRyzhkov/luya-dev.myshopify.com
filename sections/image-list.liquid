{% schema %}
    {
        "name": "Image list",
        "tag": "section",
        "class": "section",
        "presets": [
            {
                "name": "Image list"
            }
        ],
        "settings": [],
        "blocks": [
            {
                "name": "Item",
                "type": "item",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "Image"
                    },
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Title"
                    },
                    {
                        "type": "textarea",
                        "id": "text",
                        "label": "Text"
                    }
                ]
            }
        ]
    }
{% endschema %}

<section class="image-list">
    <div class="image-list__list">
        {% for block in section.blocks %}
            <div class="image-list-item">
                <img class="image-list-item__image" src="{{ block.settings.image | img_url: 'medium' }}" alt="{{ block.settings.title }}" width="300" height="300">
                <h3 class="image-list-item__title">{{ block.settings.title }}</h3>
                <div class="image-list-item__text">{{ block.settings.text }}</div>
            </div>
        {% endfor %}
    </div>
</section>