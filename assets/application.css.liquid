@charset "UTF-8";

:root {
    --gutter: 2rem;
    --wrapper: 128rem;
    --wrapper-padding: calc((100% - var(--wrapper)) / 2);
    --sidewrap: calc(var(--wrapper) + var(--wrapper-padding));

    --font-mabry: 'Mabry', sans-serif;
    --font-brule: 'Brule', sans-serif;

    --color-orange: #FE5000;
    --color-pink: #F6C4BA;
    --color-red: #991c2b;
    --color-yellow: #FFE75B;
    --color-aquamarine: #AFD9CD;
    --color-blue: #B5D8F0;
}

* {
    box-sizing: border-box;
}

body {
    font-family: var(--font-mabry);
    font-weight: 400;
    font-size: 2.4rem;
    line-height: 1;
    color: var(--color-red);
    background: #fff;
}

section {
    width: 100%;
    padding: 12.5rem 0;
    background-repeat: no-repeat;
    background-position: center center;
    background-size: cover;
}

section.no-padding {
    padding: 0;
}

section + .no-padding {
    margin-top: var(--section-padding);
}

section.no-padding + section:not(.no-padding) {
    padding-top: calc(var(--section-padding) * 2);
}

.section-blue {
    background-color: var(--color-blue);
}

.section-yellow {
    background-color: var(--color-yellow);
}

.inner-wrap {
    width: 69rem;
}

.form-wrap {
    width: 60rem;
}

.padded-wrapper {
    width: var(--sidewrap);
    padding-left: var(--wrapper-padding);
    margin-left: auto;
}



/* global START */
.flex-block {
    display: flex;
    flex-direction: column;
    gap: 3rem;
}
/* global END */



/* tabs START */
.tabs-wrap {
    overflow-x: auto;
    overflow-y: clip;
}

.tabs {
    width: min-content;
    gap: 3rem;
    padding: 0 2rem;
}

.tab {
    flex: 1;
    padding: 3rem 1rem;
    padding-top: 0;
    border-bottom: 0.3rem solid transparent;
    font-family: var(--font-tonus);
    font-weight: 600;
    line-height: 1.4;
    white-space: nowrap;
    text-align: center;
    white-space: nowrap;
    color: var(--color-grey);
    margin-bottom: -0.2rem;
    opacity: 0.8;
    cursor: pointer;
    transition: 0.3s;
}

.tab.active,
.tab:hover {
    border-color: var(--color-pink);
    color: var(--color-purple);
}

.tab.active {
    opacity: 1;
}
/* tabs END */





/* btn START */
.btn,
button[type="submit"],
input[type="submit"] {
    --btn-color: var(--color-orange);

    box-sizing: border-box;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: max-content;
    max-width: 100%;
    min-height: 5rem;
    padding: 1rem 3.5rem;

    background: transparent;
    border: 0.1rem solid var(--btn-color);
    border-radius: 99rem;
    font-family: var(--font-inter);
    font-weight: 700;
    font-size: 1.6rem;
    line-height: 1.2;
    color: var(--btn-color);
    
    overflow: hidden;
    cursor: pointer;
    position: relative;
    z-index: 1;
    transition: 0.3s ease-out;
}

.btn:hover,
button[type="submit"]:hover,
input[type="submit"]:hover {
    background: var(--btn-color);
    color: #fff;
}

.btn_orange {
    background: var(--btn-color);
    color: #fff;
}

.btn_orange:hover {
    background: #fff;    
    color: var(--btn-color);
}
/* btn END */




input:not([type='checkbox']):not([type='radio']):not([type='submit']):not([type='file']),
textarea,
select {
    box-sizing: border-box;
    width: 100%;
    height: 4.6rem;
    padding: 2rem;
    font-family: inherit;
    font-weight: 400;
    font-size: 1.6rem;
    background-color: #fff;
    border: 0.1rem solid var(--color-orange);
    border-radius: 10rem;
    color: var(--color-red);
    text-overflow: ellipsis;
    overflow: hidden;
}

textarea {
    display: block;
    height: 16.5rem;
    min-height: 16.5rem;
    border-radius: 1rem;
    resize: vertical;
    overflow: auto;
}

input::placeholder,
textarea::placeholder {
    opacity: 1;
    color: #9F9F9F;
}

select {
    padding-block: 0;
}

.form__field {
    margin-bottom: 2rem;
}

.shopify-challenge__container {
    padding: 6rem 0;
}

.errors ul li,
.shopify-challenge__message {
    display: block;
    margin-bottom: 1rem;
}

.g-recaptcha {
    margin-bottom: 5rem;
}





/* custom input START */
.custom-input {
    position: relative;
    cursor: pointer;
}

.custom-input input {
    position: absolute;
    left: 0;
    top: 0;
    opacity: 0;
}

.custom-input input + span {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    padding-left: 3rem;
    position: relative;
}

.custom-input input + span::before,
.custom-input input + span::after {
    content: '';
    box-sizing: border-box;
    width: 1.8rem;
    aspect-ratio: 1/1;
    position: absolute;
    top: 0;
    left: 0;
}

.custom-input input + span::before {
    border: 0.2rem solid #cdd9de;
    border-radius: 0.2rem;
}

.custom-input input + span::after {
    content: '';
    width: 1.6rem;
    background: url(./images/icon-check.svg) center center no-repeat;
    background-size: 100%;
    top: 0.1rem;
    left: 0.1rem;
    opacity: 0;
}

.custom-input input:checked + span::before {
    background: #fff;
    border-color: #fff;
}

.custom-input input:checked + span::after {
    opacity: 1;
}
/* custom input END */




/* text START */
.text {
    line-height: 1.5;
}

.text-l {
    font-weight: 700;
    font-size: 3.2rem;
}

.text-s {
    font-size: 2.2rem;
    line-height: 1.36;
}

.bold {
    font-weight: 700;
}

[class*='title-'],
.title,
.text h1,
.text h2,
.text h3,
.text h4,
.text h5,
.text h6 {
    font-family: var(--font-brule);
    font-weight: 600;
    font-size: 8.6rem;
    line-height: 1.1;
    color: var(--color-orange);
}

.title-l,
.text h1 {
    font-weight: 700;
    font-size: 15rem;
    line-height: 1.15;
}

.title-s,
.text h3 {
    font-size: 6rem;
    line-height: 1;
}

.title-xs,
.text h4 {
    font-size: 3.2rem;
    line-height: 1.37;
}

.title-xxs,
.text h5 {
    font-weight: 500;
    font-size: 1.6rem;
}

.title-xxxs,
.text h6 {
    font-weight: 500;
    font-size: 1.4rem;
}

.text * + p {
    margin-top: 3.2rem;
}

.text * + ul {
    margin-top: 3.2rem;
}

.text li {
    display: block;
    padding-left: 3.2rem;
    margin-top: 1.6rem;
    position: relative;
}

.text p > a {
    display: inline;
    position: relative;
    color: var(--color-blue);
}

.text p > a::after {
    content: '';
    display: block;
    width: 0;
    height: 0.1rem;
    background: currentColor;
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    transition: 0.3s;
}

.text p > a:hover::after {
    width: 100%;
}

.text blockquote p {
    padding: 1rem;
    background: var(--color-lblue);
    font-style: italic;
}

.text .wp-caption-text {
    padding-block: 1rem;
    font-size: small;
    text-align: center;
    opacity: 0.5;
}
/* text END */




/* pagination START */
.pagination {
    padding-top: 5rem;
}

.pagination__list {
    display: flex;
    flex-flow: row wrap;
    align-items: center;
    justify-content: center;
    gap: 1.6rem;
}

.pagination__list span {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 4.6rem;
    aspect-ratio: 1/1;
    border: 0.1rem solid var(--color-orange);
    border-radius: 0.5rem;
    font-weight: bold;
    font-size: 1.6rem;
    transition: 0.3s;
    cursor: pointer;
}

.pagination__list span:has(a):hover {
    background: var(--color-orange);
    color: #fff;
}

.pagination__list span.current {
    background: var(--color-orange);
    border-color: var(--color-orange);
    color: #fff;
    cursor: default;
}

.pagination__list a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
}

.pagination__list path {
    fill: currentColor;
}
/* pagination END */






/* header START */
.header {
    padding: 1.7rem 0;
    background: var(--color-yellow);
    position: sticky;
    top: 0;
    z-index: 10;
}

.header__content {
    display: flex;
    align-items: center;
    gap: 9rem;
}

.header__logo {
    width: 14rem;
    height: 6.8rem;
}

.header-nav {
    display: flex;
    align-items: center;
    gap: 4.8rem;
    margin-inline: auto;
}

.header-nav a {
    font-weight: 600;
    font-size: 1.8rem;
    transition: 0.3s;
}

.header-nav a:hover {
    color: var(--color-orange);
}

.profile-nav {
    display: flex;
    align-items: center;
    gap: 1.6rem;
}

.profile-nav__item {
    position: relative;
}

.profile-nav__item:not(:has(.profile-nav__item-icon)):hover {
    text-decoration: underline;
}

.profile-nav__item-text {
    display: flex;
    align-items: center;
    justify-content: center;
    aspect-ratio: 1 / 1;
    padding: 0.4rem;
    font-size: 1.2rem;
    border-radius: 100%;
    background: var(--color-red);
    color: #fff;
    position: absolute;
    right: 0;
    top: 0;
    translate: 50% -50%;
    z-index: 1;
    overflow: hidden;
}
/* header END */


/* footer START */
.footer {
    background: var(--color-yellow);
    padding: 6rem 0;
}
/* footer END */



/* products-list START */
.products__title {
    margin-bottom: 10rem;
}

.products .products-item__dishes {
    display: none;
}
/* products-list END */



/* product-item START */
.products-item {
    width: 30rem;
    max-width: 100%;
    gap: 3.2rem;
    text-align: center;
}

.products-item__price {
    font-weight: 700;
}

.products-item__dishes {
    gap: 0.8rem;
}

.products-item__dish {
    display: flex;
    align-items: center;
}

.products-item__dish::before {
    flex: 0 0 auto;
    content: '';
    display: block;
    width: 3rem;
    aspect-ratio: 1/1;
    background: url('./icon-check.svg') no-repeat center;
    background-size: contain;
}
/* product-item END */




/* product START */
.product__media {
    margin-bottom: 6rem;
}

.product__image {
    margin-bottom: 3.5rem;
}

.product__thumbs {
    display: flex;
    flex-wrap: wrap;
    gap: 1.6rem;
    margin-bottom: 6rem;
}

.product__thumb {
    aspect-ratio: 1/1;
    width: 8rem;
}

.product__labels {
    display: flex;
    flex-wrap: wrap;
    gap: 1.6rem;
}

.product__label {
    width: 8rem;
    aspect-ratio: 1/1;
}
/* product END */




/* posts-item START */
.posts-item {
    width: 25.5rem;
}

.posts-item__image {
    aspect-ratio: 255/345;
    overflow: hidden;
}
/* posts-item END */




/* recipe START */
.recipe__image {
    width: 76rem;
    aspect-ratio: 760/525;
    margin-bottom: 3.5rem;
}

.recipe-image-text {
    display: flex;
    flex-wrap: wrap;
    gap: 7.5rem;
    margin-bottom: 5rem;
}

.recipe-image-text__item {
    width: 11rem;
}

.recipe-image-text__image {
    width: 100%;
    aspect-ratio: 1/1;
    margin-bottom: 1.5rem;
}

.recipe-author {
    display: flex;
    gap: 6rem;
    margin-bottom: 7rem;
}

.recipe-author__image {
    flex: 0 0 auto;
    width: 20rem;
    aspect-ratio: 1/1;
}

.recipe-author__name {
    font-weight: 700;
    margin-bottom: 2.5rem;
}

.recipe-related-products {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 12rem;
}

.recipe-related-products__item {
    display: flex;
    width: 71rem;
    gap: 11rem;
}

.recipe-related-products__image {
    flex: 0 0 auto;
    width: 36rem;
}
/* recipe END */



/* cart START */
table {
    width: 100%;
}

table th,
table td {
    vertical-align: top;
    padding: 1rem;
    text-align: left;
    border: 0.1rem solid var(--color-orange);
}

.cart-product__image {
    display: block;
    width: 5rem;
}

.cart-product__title {
    margin-bottom: 1.5rem;
}

.cart-product__remove {
    display: block;
    font-size: 1.2rem;
    color: var(--color-orange);
    margin-top: 2.5rem;
}

.cart-product__remove:hover {
    text-decoration: underline;
}

.cart__footer {
    text-align: right;
}

.cart__subtotal {
    padding: 2rem 0;
    font-size: 2.4rem;
}
/* cart END */



/* globo-form START */
.globo-formbuilder-wizard .panels + p {
    position: absolute;
    left: -9999px;
    opacity: 0;
    visibility: hidden;
    width: 0;
    height: 0;
}
/* globo-form END */