/* copylink START */
.copylink {
    display: block;
    padding: 1rem;
    border: 1px solid;
    font-size: 1rem;
    text-align: center;
    position: relative;
    margin-bottom: 1rem;
    cursor: pointer;
}

.copylink:hover {
    color: var(--color-blue);
}

.copylink__hint {
    display: block;
    padding: 1rem;
    white-space: nowrap;
    border: 1px solid #fff;
    background: #000;
    color: #fff;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    display: none;
    z-index: 1;
}
/* copylink END */




/* langs START */
.langs {
    position: relative;
}

.langs__item {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-weight: 500;
    font-size: 1.8rem;
    text-transform: uppercase;
    transition: 0.3s;
}

.langs__list {
    min-width: 100%;
    position: absolute;
    top: 100%;
    left: 0;
    opacity: 0;
    visibility: hidden;
    transition: 0.3s;
}

.langs:hover .langs__list {
    opacity: 1;
    visibility: visible;
}

.langs__list-inner {
    min-width: 100%;
    padding-block: 1rem;
    background: var(--color-white);
    box-shadow: 0.5rem 0.7rem 1rem 0 rgb(0 0 0 / 25%);
    margin-left: -2rem;
}

.langs__list .langs__item {
    padding: 1rem 2rem;
}

.langs__list .langs__item:hover {
    color: var(--color-blue);
}
/* langs END */



/* upload file START */
.upload-file {
    position: relative;
    cursor: pointer;
}

.upload-file__input {
    opacity: 0;
    position: absolute;
    inset: 0;
    z-index: 3;
    cursor: pointer;
}

.upload-file__drag {
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-blue);
    text-align: center;
    opacity: 0;
    position: absolute;
    inset: 0;
    transition: 0.3s;
    z-index: 2;   
}

.upload-file.dragged .upload-file__drag {
    opacity: 0.8;
}

.upload-file__drag-icon {
    width: 5rem;
    margin: 0 auto 2rem;
}

.upload-file__content {
    aspect-ratio: 1/1;
    box-sizing: border-box;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 25rem;
    padding: 5rem;
    border: 1.5rem solid rgba(48, 110, 183, 0.5);
    border-radius: 100%;
    text-align: center;
    line-height: 1.4;
    word-break: break-word;
    position: relative;
    margin-bottom: 4rem;
}

.upload-file__content img {
    border-radius: 100%;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 1;
}

.upload-file__remove {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 2rem;
    height: 2rem;
    border: 0.1rem solid;
    border-radius: 100%;
    padding: 0.4rem;
    font-family: monospace;
    font-size: 20px;
    background: #fff;
    position: absolute;
    right: -1rem;
    top: -1rem;
    z-index: 3;
    transition: 0.3s;
}

.upload-file__remove:hover {
    transform: scale(0.8);
}

.upload-file__btn {
    width: 100%;
}
/* upload file END */



/* popup START */
.popup {
    display: flex;
    align-items: center;
    justify-content: center;
    position: fixed;
    inset: 0;
    z-index: 99;
}

.popup__overlay {
    background: var(--color-orange);
    opacity: 0.5;
    position: absolute;
    inset: 0;
    z-index: -1;
}

.popup__close {
    position: absolute;
    right: 3rem;
    top: 3rem;
    z-index: 1;
    cursor: pointer;
}

.popup__close line {
    stroke: #000;
    transition: 0.3s;
}

.popup__close:hover line {
    stroke: red;
}

.popup__inner {
    padding: 1.5rem;
    position: relative;
}

.popup__content {
    box-sizing: border-box;
    max-width: 100%;
    width: 80rem;
    padding: 5rem 3rem;
    background: var(--color-white);
    border-radius: 2rem;
}

/* popup END */



/* parallax START */
.plx-parent {
    position: relative;
}

.plx {
    --parallax-intensity: 9s;
    max-width: 100%;
    height: auto;
    pointer-events: none;
    position: absolute;
    top: var(--top);
    bottom: var(--bottom);
    left: var(--left);
    right: var(--right);
    z-index: 0;
}

.plx_static {
    position: relative;
}

.plx_m {
    --parallax-intensity: 6s;
}

.plx_s {
    --parallax-intensity: 3s;
}
/* parallax END */



/* header START */
.header {
    padding: 1.7rem 0;
    background: var(--color-yellow);
    position: sticky;
    top: 0;
}

.header__content {
    display: flex;
    gap: 9rem;
}

.header__logo {
    width: 14rem;
    height: 6.8rem;
}

.header-nav {
    display: flex;
    align-items: center;
    gap: 4.8rem;
}

.header-nav a {
    font-weight: 600;
    font-size: 1.8rem;
    transition: 0.3s;
}

.header-nav a:hover {
    color: var(--color-orange);
}
/* header END */