@media screen and (max-width: 575.9px) {
    :root {
        --section-padding: 3.5rem;
    }

    body {
        font-size: 1.6rem;
    }

    section {
        padding: 7rem 0;
    }

    .scrollbar {
        height: 0.6rem;
    }

    input[type='text'],
    input[type='email'],
    input[type='tel'],
    input[type='number'],
    input[type='password'],
    input[type='search'],
    textarea,
    select {
        height: 5rem;
        padding: 0.5rem 2rem;
        font-size: 1.7rem;
    }

    textarea {
        padding-top: 1.5rem;
        min-height: 33rem;
    }

    .btn, 
    input[type='submit'] {
        height: auto;
        min-width: unset;
        min-height: 4.6rem;
        padding: 1rem 2rem;
        font-size: 1.6rem;
    }

    .title-l,
    .text h1 {
        font-size: 9rem;
        line-height: 0.8;
    }

    .title,
    .text h2 {
        font-size: 4.2rem;
    }

    .title-s,
    .text h3 {
        font-size: 3.6rem;
    }

    .title-xs,
    .text h4 {
        font-size: 2.4rem;
    }

    .text-l,
    .text h5 {
        font-size: 2rem;
    }

    .text-m,
    .text-s,
    .text {
        font-size: 1.6rem;
    }

    .text-m {
        line-height: 2.2rem;
    }

    .text-xs {
        font-size: 1.2rem;
    }
}

