/* .9px is a fix for windows OS */

@media screen and (max-width: 1199px) {
    :root {
        --section-padding: 4.5rem;
    }
    
    body {
        font-size: 1.8rem;
    }

    section {
        padding: 9rem 0;
    }

    .title-l,
    .text h1 {
        font-size: 12rem;
    }

    .title,
    .text h2 {
        font-size: 6.4rem;
    }

    .title-s,
    .text h3 {
        font-size: 4.8rem;
    }

    .title-xs,
    .text h4 {
        font-size: 3.5rem;
    }

    .text-l,
    .text h5 {
        font-size: 2.6rem;
    }

    .text-m {
        font-size: 2rem;
    }

    .text-s,
    .text {
        font-size: 1.8rem;
    }

    .text-xs {
        font-size: 1.4rem;
    }
}

