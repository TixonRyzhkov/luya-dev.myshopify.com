<div class="recipes">
    <section class="recipes-main">
        <div class="recipes__wrapper wrapper">
            {% paginate blog.articles by 5 %}

                <h1 class="recipes__title title">{{ blog.title }}</h1>

                <div class="recipes__row row row-v">
                    {% for article in blog.articles %}
                        <div class="recipes__col col-md-4">
                            {% include 'posts-item', post:article, class:'recipes-item posts-item' %}
                        </div>
                    {% endfor %}
                </div>

                {% if paginate.pages > 1 %}
                    {{ paginate | default_pagination }}
                {% endif %}

            {% endpaginate %}

        </div>
    </section>
</div>